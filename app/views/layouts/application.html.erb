<!DOCTYPE html>
<html>
  <head>
    <title>RailsPortfolio</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar navbar-expand-lg navbar-light bg-secondary">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to 'Projects', '#' %></li>
        <% if current_user %>
        <li><%= link_to 'Edit Profile',edit_user_registration_path %></li>
        <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
        <li><%= link_to 'Add New Project', new_project_path %></li>

        <li class="round-image-50"><%= image_tag(current_user.avatar.url(:thumb)) %></li>

        <% else %>
          <li><%= link_to 'Login', new_user_session_path %></li>
        <% end %>
      </ul>
    </div>

    <div>
      <%= flash[:notice] %>
    </div>
    <div>
      <%= flash[:alert] %>
    </div>
    <div class='container'>
      <%= yield %>
    </div>
  </body>
</html>
